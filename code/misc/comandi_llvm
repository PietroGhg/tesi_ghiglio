debug:
cmake "/home/pietro/Desktop/Quinto_anno/llvm-project/llvm" -G Ninja  -DLLVM_ENABLE_PROJECTS="clang;clang-tools-extra;libcxx;libcxxabi;lldb;compiler-rt;lld;" -DCMAKE_INSTALL_PREFIX="/home/pietro/Desktop/Quinto_anno/llvm-debug" -DCMAKE_EXE_LINKER_FLAGS="-fuse-ld=gold" -DBUILD_SHARED_LIBS=ON -DLLVM_BUILD_TESTS=ON -DLLVM_INSTALL_UTILS=ON

release:
cmake "/home/pietro/Desktop/Quinto_anno/llvm-project/llvm" -G Ninja -DLLVM_ENABLE_PROJECTS="clang;clang-tools-extra;libcxx;libcxxabi;lldb;compiler-rt;lld;" -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX="/home/pietro/Desktop/Quinto_anno/llvm-release" -DCMAKE_EXE_LINKER_FLAGS=-fuse-ld=gold

primo cmake di un progetto:
cmake .. -DLLVM_DIR=/home/pietro/llvm/lib/cmake/ -DCMAKE_EXPORT_COMPILE_COMMANDS=ON 

cmake ../llvm  -DLLVM_ENABLE_PROJECTS="clang;clang-tools-extra;libcxx;libcxxabi;lldb;compiler-rt;lld;" -DCMAKE_INSTALL_PREFIX=../install-debug -DCMAKE_EXE_LINKER_FLAGS="-fuse-ld=gold" -DBUILD_SHARED_LIBS=ON -DLLVM_BUILD_TESTS=ON -DLLVM_INSTALL_UTILS=ON -DCMAKE_POSITION_INDEPENDENT_CODE:BOOL=true